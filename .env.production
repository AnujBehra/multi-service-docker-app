# ===========================================
# Multi-Service Docker Application
# Environment Configuration (Production)
# ===========================================

# Application
NODE_ENV=production

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Database Configuration
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=info

# pgAdmin (Admin profile only)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
PGADMIN_PORT=5050

# Redis Commander (Admin profile only)
REDIS_COMMANDER_PORT=8081

# Monitoring (Monitoring profile only)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_ROOT_URL=http://localhost:3001
LOKI_PORT=3100

# Backup Configuration (Backup profile only)
BACKUP_RETENTION_DAYS=7

# CORS
CORS_ORIGIN=*
